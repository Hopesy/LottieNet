<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LottieNet.Controls">

    <!-- PrerenderedLottieView 样式 -->
    <Style TargetType="{x:Type local:PrerenderedLottieView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PrerenderedLottieView}">
                    <Grid>
                        <Image x:Name="PART_Image"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- LottieView 样式 -->
    <Style TargetType="{x:Type local:LottieView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LottieView}">
                    <ContentControl x:Name="PART_ContentHost" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
